{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "dev",
			"problemMatcher": {
				"base": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "assets",
					"endsPattern": "compiled"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			// "options": {
			// 	"shell": {
			// 		"executable": "C:\\WINDOWS\\System32\\wsl.exe"
			// 	},
			// 	"args": []
			// }
		},
	]
}